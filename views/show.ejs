                    <br>
                    Offer? <% if (applications.offer === true) { %>
                        Yes
                            <% } else { %>
                            No
                            <% } %>
                    <br>
            </div> -->
        </div>
        <!-- FOOTER -->
        <%- include ('./partials/footer.ejs') %>
    </div>
</body>
</html>